{
  "name": "flow-fantasy-fusion",
  "version": "1.0.0",
  "description": "AI-powered cross-ecosystem fantasy sports dApp on Flow blockchain with Forte Actions",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "ai"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:ai",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:ai": "cd ai && pip install -r requirements.txt",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:ai": "cd ai && python app.py",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts && npm run test:backend",
    "test:contracts": "flow test --cover --covercode='contracts' tests/*.cdc",
    "test:backend": "cd backend && npm test",
    "deploy:emulator": "flow emulator start",
    "deploy:testnet": "bash scripts/deploy_contracts.sh"
  },
  "keywords": [
    "flow",
    "blockchain",
    "cadence",
    "forte",
    "fantasy-sports",
    "nft",
    "defi",
    "ai",
    "hackathon"
  ],
  "author": "Flow Fantasy Fusion Team",
  "license": "MIT",
  "devDependencies": {
    "@onflow/flow-js-testing": "latest"
  }
}
